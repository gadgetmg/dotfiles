if [[ -v ZELLIJ ]]; then
elif systemctl --user is-active --quiet zellij.scope; then
  exec zellij attach default --create
else
  exec systemd-run --user --scope --unit zellij --quiet -- zellij
fi

alias cat="bat"
alias c="bat"
alias g="git"
alias v="nvim"
alias k="kubectl"
alias kg="kubectl get -o wide"
alias ka="kubectl get -o wide all"
alias kp="kubectl get -o wide pods"
alias ks="kubectl get -o wide services"
alias kaf="kubectl apply -f"
alias kak="kubectl apply -k"
alias kn="kubectl config set-context --current --namespace"

alias -g -- --help='--help 2>&1 | bat --language=help --style=plain'

